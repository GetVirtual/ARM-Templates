        "displayName": "site1vnet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('site1vnetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('site1vnetSubnet1Name')]",
