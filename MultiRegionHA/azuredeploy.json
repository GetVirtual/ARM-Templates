        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('site1vm1ImagePublisher')]",
            "offer": "[variables('site1vm1ImageOffer')]",
            "sku": "[parameters('WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "site1vm1OSDisk",
            "caching": "ReadWrite",
            "createOption": "FromImage"
