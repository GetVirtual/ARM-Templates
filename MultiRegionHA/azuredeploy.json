      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.76",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "configuration": {
            "url": "[variables('DSCurl')]",
            "script": "[variables('DSCfilename')]",
            "function": "[variables('DSCfunction')]"
          }
