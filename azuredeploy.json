{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "locationsite1": {
      "type": "string",
      "allowedValues": [ "North Europe", "West Europe" ],
      "defaultValue": "North Europe",
      "metadata": {
        "description": "Location for the first site"
      }
    },
    "locationsite2": {
      "type": "string",
      "allowedValues": [ "North Europe", "West Europe" ],
      "defaultValue": "West Europe",
      "metadata": {
        "description": "Location for the second site"
      }
    }

  },
  "variables": {
    "Site1-RGName": "MultiRegion-Site1",
    "Site2-RGName": "MultiRegion-Site2",
    "Site3-RGName": "MultiRegion-TM",
    "VNET-NEPrefix": "10.10.12.0/24",
    "VNET-NESubnet1Name": "default",
    "VNET-NESubnet1Prefix": "10.10.12.0/24",
    "VNET-WEPrefix": "10.10.11.0/24",
    "VNET-WESubnet1Name": "default",
    "VNET-WESubnet1Prefix": "10.10.11.0/24"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('locationsite1')]",
      "name": "[variables('Site1-RGName')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('locationsite2')]",
      "name": "[variables('Site2-RGName')]",
      "properties": {}
    },
    {
      "name": "VNET-WE",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[parameters('locationsite1')]",
      "resourceGroup": "[variables('Site1-RGName')]",
      "apiVersion": "2018-10-01",
      "dependsOn": [],
      "tags": {
        "displayName": "VNET-WE"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('VNET-WEPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('VNET-WESubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('VNET-WESubnet1Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "VNET-NE",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[parameters('locationsite2')]",
      "resourceGroup": "[variables('Site2-RGName')]",
      "apiVersion": "2018-10-01",
      "dependsOn": [],
      "tags": {
        "displayName": "VNET-NE"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('VNET-NEPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('VNET-NESubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('VNET-NESubnet1Prefix')]"
            }
          }
        ]
      }
    }

  ]
}
